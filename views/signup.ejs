





<div class="row mt-4" >
    <h1 class="text-center">Sign Up</h1>
    <div class="col-6 offset-3">
<form action="/users/create" class="validateForm" novalidate method="POST">
   


    <div>
        <label class="form-label mt-3" for="name">Name </label>
        <input class="form-control" type="text" placeholder="eg : Jane" name="name" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please provide a name.
        </div>
    </div>

    <div>
        <label class="form-label mt-3" for="email">Email </label>
        <input class="form-control" type="email" placeholder="eg : abc@gmail.com" name="email" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please provide a email.
        </div>
    </div>

    <div>
        <label class="form-label mt-3" for="password">Password </label>
        <input class="form-control" type="password" placeholder="eg : @Abc123#" name="password" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please provide a password.
        </div>
    </div>

    <div>
        <label class="form-label mt-3" for="password">Confirm Password</label>
        <input class="form-control" type="password" placeholder="eg : @Abc123#" name="confirm_password" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please provide a password.
        </div>
    </div>



    <div class="mt-4 col-12">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
          <label class="form-check-label" for="invalidCheck">
            Agree to terms and conditions
          </label>
          <div class="invalid-feedback">
            You must agree before submitting.
          </div>
        </div>
      </div>
      <div class="d-grid gap-2">
    <button class="btn btn-success mt-3">Sign Up</button>
</div>

</form>

<form action="/users/auth/google" method="GET">
    <div class="d-grid gap-2">
<button class="btn btn-info mt-2 px-3.5">Google signUp</button>
</div>
</form>

<form action="/users/signin" method="GET">
    <div class="d-grid gap-2">
<button class="btn btn-primary mt-2 px-3.5">Already have an account? Sign In</button>
</div>
</form>


</div>
</div>

